{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "app/*": ["./src/app/*"],
      "modules/*": ["./src/modules/*"],
      "shared/*": ["./src/shared/*"],
      "pages/*": ["./src/pages/*"]
    },
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"]
}
